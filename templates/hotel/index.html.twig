{% extends 'base.html.twig' %}

{% block title %}Nos hôtels{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Les hôtels d'hypnos dans toutes la France</h1>
    <div class="row">
        <div class="col-md-9 mb-2">

            <div class="row">
                {% for hotel in hotels %}
                    <div class="card position-relative m-2 p-2 " style="width: 18rem;">
                        <img src="/images/thumbnails/{{ hotel.thumbnail }}">
                        <h5 class="text-center">{{ hotel.name }}</h5>
                        <h5 class="text-center">{{ hotel.villes }}</h5>
                        <p>{{ hotel.description }}</p>
                        <a href="{{ path('hotel', {'slug' : hotel.slug}) }}" class="btn btn-dark btn-sm ">voir l'hôtel</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

</div>
{% endblock %}
