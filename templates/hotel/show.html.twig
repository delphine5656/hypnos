{% extends 'base.html.twig' %}

{% block title %} {{ hotel.name }}{% endblock %}

{% block body %}

    <h1 class="">{{ hotel.name }}</h1>
    <div class="row">
        <div class="col-4">
            <img src="/images/thumbnails/{{ hotel.thumbnail }}">
        </div>
        <div class="col-7">
            <h3 class="text-center">{{ hotel.name }}</h3>
            <h3 class="text-center">{{ hotel.villes }}</h3>
            <p class="text-center">{{ hotel.adress }}</p>
            <p class="text-center">{{ hotel.description }}</p>
            <h5 class="text-center">Nos suites: </h5>
                    <ul>
                        {% for suite in hotel.suites %}
                        <li class="text-center">{{ suite }}: <a class="btn btn-dark" href="{{ path('suite', {'slug' : suite.slug}) }}">voir la suite</a></li>
                    </ul>
                        {% endfor %}
        </div>

    </div>


{% endblock %}
