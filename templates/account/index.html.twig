{% extends 'base.html.twig' %}

{% block title %}Gestion de votre compte hypnos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="display-1 text-center" >Votre compte Hypnos</h1>
    <section class="my-1 justify-content-center">
    <br>
    {%  if is_granted('ROLE_EDITOR') %}
        <a href="{{ path('admin') }}" class="btn btn-dark">aller sur le panel d'administration</a>
    {% endif %}
    </section>
    <br>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div>
                        <ul class="nav nav-tabs flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active btn-dark"> Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-dark"  href="">Vos réservations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-dark" href="">Account details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-dark" href="{{ path('app_logout')}}"><i class="ti-lock"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8">

                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                            <div class="card">
                                <div class="card-header">
                                    <h3>Bonjour {{ app.user.firstname }} {{ app.user.lastnamme }}</h3>
                                </div>
                                <div class="card-body">
                                    <p>Bienvenue sur votre compte. Vous pouvez facilement gérer et voir  <a class="btn btn-dark" href="">réservations</a> et <a class="btn btn-dark" href="">modifier votre mot de passe</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
{% endblock %}
