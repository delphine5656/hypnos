        <h1 class="display-1 text-center">Les suites d'Hypnos dans toutes la France</h1>
        <section class="row mb-2" >
            <div class="mb-2 d-lg-inline-block col-md-4">
                <h3>Filtrer</h3>
                {{ form(form) }}
            </div>
            <div class="my-3 col-md-8">
