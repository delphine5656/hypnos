{% extends 'base.html.twig' %}

{% block title %}Nos suites{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <h1>Les suites d'Hypnos dans toutes la France</h1>
        <div class="row">
            <div class="col-md-9 mb-2">

                <div class="row">
                    {% for suite in suites %}
                        <div class="card position-relative m-2 p-2 " style="width: 18rem;">
                            <img src="/images/thumbnails/{{ suite.thumbnail }}">
                            <h5 class="text-center">{{ suite.titre }}</h5>
                            <h5 class="text-center">l'h√¥tel {{ suite.etablissement }} - {{ suite.ville }}</h5>
                            <p>{{ suite.description }}</p>
                            <a href="{{ path('suite', {'slug' : suite.slug}) }}" class="btn btn-dark btn-sm ">voir la suite</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
