{% extends 'base.html.twig' %}

{% block title %}Nos suites{% endblock %}

{% block body %}
    <style>
        .card{
            background-image: url("assets/images/bg.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>

    <main class="container-fluid">
        <h1 class="display-1 text-center">Les suites d'Hypnos dans toutes la France</h1>
        <section class="py-5">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 justify-content-center">
                    {% for suite in suites %}
                        <div class="col">
                            <div class="card shadow-sm bg-transparent text-center text-white">
                                <img src="/images/thumbnails/{{ suite.thumbnail }}">

                                <div class="card-body">
                                    <h4>{{ suite.titre }}</h4>
                                    <h5>l'h√¥tel {{ suite.etablissement }} - {{ suite.ville }}</h5>
                                    <p class="card-text">{{ suite.description }}</p>
                                        <div class="text-center">
                                            <div class="btn-group">
                                            <a href="{{ path('suite', {'slug' : suite.slug}) }}" class="btn btn-dark btn-sm ">voir la suite</a>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

        </section>
    </main>
{% endblock %}
