{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Decription</th>
                <td>{{ reservation.decription }}</td>
            </tr>
            <tr>
                <th>All_day</th>
                <td>{{ reservation.allDay ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('account') }}">back to list</a>

    <a href="{{ path('app_booking_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
